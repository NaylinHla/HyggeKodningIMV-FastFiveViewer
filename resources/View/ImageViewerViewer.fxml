<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ImageViewerController">
   <children>
      <HBox layoutY="322.0" prefHeight="100.0" prefWidth="601.0">
         <children>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="497.0" styleClass="HBox" stylesheets="@../CSS/Main.css">
               <children>
                  <Button fx:id="previousBtn" mnemonicParsing="false" onAction="#previousImage" stylesheets="@../CSS/Main.css" text="Previous">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></Button>
                  <Button fx:id="nextBtn" mnemonicParsing="false" onAction="#nextImage" stylesheets="@../CSS/Main.css" text="Next">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin></Button>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="325.0" styleClass="HBox" stylesheets="@../CSS/Main.css">
               <children>
                  <Button fx:id="slideshowBtn" mnemonicParsing="false" onAction="#slideshowBtn" stylesheets="@../CSS/Main.css" text="Start Slideshow">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="loadImagesBtn1" mnemonicParsing="false" stylesheets="@../CSS/Main.css" text="Load images...">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutY="58.0" prefHeight="265.0" prefWidth="601.0" styleClass="HBox" stylesheets="@../CSS/Main.css">
         <children>
            <ImageView fx:id="myImageView" fitHeight="265.0" fitWidth="584.0" pickOnBounds="true" preserveRatio="true" styleClass="imageView">
               <image>
                  <Image url="@../Pictures/nature1.jpg" />
               </image>
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor></ImageView>
         </children>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </HBox>
      <HBox alignment="CENTER" prefHeight="58.0" prefWidth="601.0" styleClass="HBox" stylesheets="@../CSS/Main.css">
         <children>
            <Label stylesheets="@../CSS/Main.css" text="Image Viewer">
               <font>
                  <Font name="System Bold" size="31.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </children>
</AnchorPane>
